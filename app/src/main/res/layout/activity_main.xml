<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/nav_1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#830000"
        android:padding="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_login"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center|end"
            app:srcCompat="@drawable/usuario" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="653dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#830000"
        android:orientation="vertical"
        android:padding="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="289dp"
            app:srcCompat="@drawable/main" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="15dp" />

        <ImageButton
            android:id="@+id/btn_peito"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:backgroundTint="#830000"
            app:srcCompat="@drawable/pt_btn" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Peito" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <ImageButton
            android:id="@+id/btn_costas"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:backgroundTint="#830000"
            app:srcCompat="@drawable/ct_btn" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Costas" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <ImageButton
            android:id="@+id/btn_perna"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:backgroundTint="#830000"
            app:srcCompat="@drawable/pn_btn" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pernas" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>